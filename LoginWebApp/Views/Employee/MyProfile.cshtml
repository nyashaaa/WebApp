@model LoginWebApp.Models.Employee

@{
    ViewData["Title"] = "My Profile";
}

<h1>My Profile</h1>

<div>
    <dl class="row">
        <dt class="col-sm-2">Full Name</dt>
        <dd class="col-sm-10">@Model.FullName</dd>

        <dt class="col-sm-2">Position</dt>
        <dd class="col-sm-10">@Model.Position</dd>

        <dt class="col-sm-2">Department</dt>
        <dd class="col-sm-10">@Model.Department</dd>

        <dt class="col-sm-2">Email</dt>
        <dd class="col-sm-10">@Model.Email</dd>

        <dt class="col-sm-2">Phone</dt>
        <dd class="col-sm-10">@Model.Phone</dd>

        <dt class="col-sm-2">Date Hired</dt>
        <dd class="col-sm-10">@Model.DateHired.ToString("d")</dd>
    </dl>
</div>

<div>
    <a asp-action="EditProfile" class="btn btn-primary">Edit Profile</a>
</div>
